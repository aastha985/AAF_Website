<div class="container">
	<h1 id="oh2" class="text-center">Edit Creative Writing</h1>
	<p id="p1">Note: All fields are mandatory. </p>
	<form action="/explore/<%= post._id %>?_method=PUT" method="POST">
		<div class="form-group">
		<label for="formGroupExampleInput">Heading</label>
		<input type="text" class="form-control" id="formGroupExampleInput" name="post[heading]" value="<%= post.heading %>" required>
		  <small class="form-text text-muted">This will appear as the heading of your post</small>
	  </div>
		<div class="form-group">
		<label for="formGroupExampleInput">Short Description(100 Characters)</label>
		<input type="text" class="form-control" id="formGroupExampleInput" name="post[shortDescription]" maxlength = "100" value="<%= post.shortDescription %>" required>
		  <small class="form-text text-muted">This will appear under the heading on the main page</small>
	  </div>
	  	<div class="form-group">
			<label for="inlineFormCustomSelect">Choose Category <span class="asterisk">*</span></label>
			<select class="custom-select mr-sm-2" id="inlineFormCustomSelect" name="post[category]" required>
				<% categories.forEach((category)=>{%>
					<%if(category.name==post.category){%>
						<option value=<%=category._id%> selected><%=category.name%></option>
					<%}else{%>
					<option value=<%=category._id%>><%=category.name%></option>
					<%}%>
				<%})%>
			</select>
		  </div>
		  <div class="form-group">  
			<label for="Date approved">Date Approved:</label>
			<% if(post.dateApproved) {%>
				<input type="date" id="birthday" name="post[dateApproved]" value=<%=post.dateApproved.toISOString().slice(0,10) %>>
			<% }else{ %>
				<input type="date" id="birthday" name="post[dateApproved]">
			<% } %>
		  </div>
		<div class="form-group">
			<label for="content">Content</label>
			<div id="content"><%- post.content %></div>
			<input type="hidden" name="content">
		</div>
		<div class="text-center">
			<button type="submit" class="btn btn-lg">Submit</button>
		</div>
	</form>
</div>
