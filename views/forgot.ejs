<div class="container last">
		<div class="text-center">
			<h2 id="signh" class="mt-5 pt-5">Forgot Password</h2>
			<form action="/forgot" method="POST">
				<div class="form-group">
					<input type="email" class="form-control" name="username" placeholder="Email address" required>
				</div>
				<button class="btn mb-3 mt-2" id="reset">
					Reset Password
				</button>
				<a href="/login" style="float:right">Back to Login</a>
				<button data-toggle="modal" data-target="#modalForm" style="float:left" class="resendButton" id="resend">Did not receive email?</a>
			</form>
		</div>
</div>

<!-- did not receive email form -->
<div class="modal fade" id="modalForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">Register Complaint</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
	  <div class="modal-body text-center">
	  	<form action="/forgot/query" method="POST">
			<div class="form-group">
			  <input type="email" id="defaultForm-email" class="form-control validate" name="email" placeholder="Email" required>
			</div>
			<div class="form-group">
			  <input type="text" id="defaultForm-pass" class="form-control validate" name="description" placeholder="Description">
			</div>
			<button class="btn btn-default" type="submit">Submit</button>
		</form>
	</div>
     
    </div>
  </div>
</div>

